from django.db import models


class {{ model_name }}(models.Model):
{% for field in fields %}
    {{ field.name }} = models.{{ field.type }}({% if field.max_length and field.type != "TextField" %}max_length={{ field.max_length }}, {% endif %}blank=True, null=True)
{% endfor %}

    class Meta:
        verbose_name = "{{ model_name }}"
        verbose_name_plural = "{{ model_name }}s"

    def __str__(self):
{% if fields|length > 0 %}
        # Return first field if available
        first_field = getattr(self, '{{ fields[0].name }}', None)
        if first_field:
            return str(first_field)
{% endif %}
        return str(self.id)
